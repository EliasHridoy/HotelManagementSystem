@model IEnumerable<HotelManagementSystem.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


    <div class="card-deck">

        @foreach (var employee in Model)
        {


            <div class="text-white bg-info mb-5 m-3">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <img src="~/img/iu.jpg" class="card-img" width="250" height="320" />
                <div class="card-body"> <h4>@employee.Email</h4></div>
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        }


    </div>


